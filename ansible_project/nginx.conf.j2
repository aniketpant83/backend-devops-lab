server {
    listen 80;
    server_name localhost; #localhost as it wants to set it up on its own localhost

    location / {
        proxy_pass http://employee_portal_pp-employee_service-1:5001; #flask app, dont forget http
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    # Additional location blocks for other services...
}

